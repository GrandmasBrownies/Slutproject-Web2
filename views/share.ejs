<body class="body-share">
    <div class="navbar">
        <ul>
            <li class="home"><a href="/home">Home</a></li>
            <li class="active"><a href="/share">Share your recipes</a></li>
            <li class="favourite"><a href="/favourite">Favourite recipes <i class="fa-solid fa-star"></i></a></li>
            <li class="grocery"><a href="/grocery">Grocery list</a></li>
            <li class="login"><a href="/login">Login</a></li>
        </ul>
    </div>

    <div class="share_main">
        <h1>Would you like to share your own recipes?</h1>
        <div class="container">
            <h5>Of course you do, upload them here:</h5>    
            <a href="/post">                
                <button><i class="fa-solid fa-download"></i></button>
            </a>
            <% if (notLoggedInMsg) { %>
                <div><%= notLoggedInMsg %></div>
            <% } %>
        </div>
    </div>


</body>
</html>